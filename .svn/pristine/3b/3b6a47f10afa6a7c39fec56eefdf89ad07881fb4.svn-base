<script>
    function PrepararNovedadSoporte(IdTicket, IdUsuario, NombreUsuario, FechaDeTicket,Leida) {
        var template = $("#TemplateNovedad")[0];
        var clone = document.importNode(template.content, true);

        var Fecha = clone.querySelector("#Fecha");
        Fecha = FechaDeTicket;

        if (Leida == false) {
            var Icono = clone.querySelector("#icono");
            $(Icono).addClass('notificacionNueva');
            $(Icono).attr('id', IdTicket);
        }
        return clone;
    }

    function PrepararNovedad(Novedad) {
        var template = $("#TemplateNovedad")[0];
        var clone = document.importNode(template.content, true);

        var cuerpo = clone.querySelector('p');
        cuerpo.prepend(Novedad.Cuerpo);

        var icono = clone.querySelector('#icono');
        var iconoAfuera = clone.querySelector('.timeline-icon')
        $(icono).attr('class',Novedad.Icono);
        if (Novedad.Leida == false) {
            $(icono).addClass('notificacionNueva');
            $(iconoAfuera).addClass('pulsate-fwd ')
        }
        icono.dataset.val = Novedad.Id;

        var LinkReg = clone.querySelector('#LinkReg');
        LinkReg.href = '/' + Novedad.Tabla + '/Registro/' + Novedad.RegistroId;
        var fecha = clone.querySelector('#fecha');
        fecha.append(Novedad.Antiguedad);

        return clone;

    }

    function CargarNotificaciones() {
        $.ajax({
                url: '@Url.Action("CargarNotificaciones")', //Usando razor en js, voilá
                type: 'get',
                dataType: 'json',
                contentType: 'application/json',
                success: function (data) {
                    $(".timeline-sm").empty();
                    data.forEach(function (item) {
                        AgregarNovedad(item);

                    });

                },
        });
        return true;
    }

    var TimerId
    $(function () {
        CargarNotificaciones();
        TimerId = setInterval(function () { CargarNotificaciones(); }, 60000);
    })

    function AgregarNovedad(Novedad) {

        $(".timeline-sm").append(PrepararNovedad(Novedad));
    }

    function NotifVista(btn) {
        if ($(btn).hasClass("notificacionNueva")) {
            //btn.removeClass("notificacionNueva");

            var pParam = btn[0].dataset.val;


             $.ajax({
                url: '@Url.Action("NotificacionVista")',
                type: 'post',
                dataType: 'json',
                 data: JSON.stringify({ pParam: pParam }),
                contentType: 'application/json',
                success: function (data) {
                    btn.removeClass("notificacionNueva");
                    btn.parent().removeClass("pulsate-fwd");
                },
            });
        }

    }

</script>

