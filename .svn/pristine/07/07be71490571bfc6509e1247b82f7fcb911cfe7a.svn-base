@using System.Web.Mvc
@using System.Web.Mvc.Html
@using System.Web.Optimization
@using ControladoresCore.Extensiones
@model ControladoresCore.ViewModels.SoportesVM
@{
    ViewBag.Title = "Soportes - Modificar registro";
}
<div class="row">
    <div class="col-md-10">

    </div>

</div>
@using (Html.BeginForm())
{
    using (Html.BeginCard("Editar pedido de soporte"))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-10 ">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Numero, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Numero, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaDeEjecucion, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                @Html.EditorFor(model => model.FechaDeEjecucion, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"}})
                                @Html.ValidationMessageFor(model => model.FechaDeEjecucion, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PrioridadDeSoporteId, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.PrioridadDeSoporteId, new SelectList(Model.PrioridadesDeSoporte, "Id", "Nombre", Model.PrioridadDeSoporteId), "Seleccione una opcion...", new {@class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.PrioridadDeSoporteId, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EstadoDeSoporteId, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.EstadoDeSoporteId, new SelectList(Model.EstadosDeSoporte, "Id", "Nombre", Model.EstadoDeSoporteId), "Seleccione una opcion...", new {@class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.EstadoDeSoporteId, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaDeCierre, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                @Html.EditorFor(model => model.FechaDeCierre, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"}})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UsuarioQueSolicita, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.UsuarioQueSolicita, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Texto, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Texto, new {@class = "form-control", @readonly = "readonly", rows = "5"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Observaciones, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Observaciones, new {@class = "form-control", rows = "5"})
                            @Html.ValidationMessageFor(model => model.Texto, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ObservacionesPrivadas, new {@class = "control-label col-md-3"})
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.ObservacionesPrivadas, new {@class = "form-control", rows = "5"})
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
    {
        Html.RenderPartial("_ArchivosInsert");
    }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

    <div class="card" id="dyn_2">
        <h4 style="background-color: var(--color-primary); padding: 1px;" class="card-header mt-0"></h4>
        <div class="card-body fade-in p-2">
            <div class="col-lg-12 pull-left botonera">
                @HtmlHelperExtension.Boton("Soportes", "Listado", ViewBag.Seccion)
                @HtmlHelperExtension.Boton("Update", ViewBag.DatosDeUnaPagina.AutorizadoACargarLaPagina, ViewBag.Seccion)
                <a class="btn btn-danger removeOnIframe" href="/intranet/Home/Index">Cancelar</a>
            </div>
        </div>
    </div>
}