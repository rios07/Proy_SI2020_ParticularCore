@model ControladoresCore.ViewModels.PassVM
@using ControladoresCore.Extensiones
@{
    ViewBag.Title = "Usuarios - CambiarContraseña";
}
<div class="row">
    <div class="col-md-10">

    </div>
</div>


@using (Html.BeginForm())
{
    using (Html.BeginCard("Cambiar Contraseña"))
    {
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => Model.PassActual, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => Model.PassActual, new { htmlAttributes = new { @class = "form-control", @type = "Password" } })
                    @Html.ValidationMessageFor(model => Model.PassActual, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => Model.PassNuevo, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => Model.PassNuevo, new { htmlAttributes = new { @class = "form-control", @type = "Password" } })
                    @Html.ValidationMessageFor(model => Model.PassNuevo, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => Model.ConfirmarPass, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => Model.ConfirmarPass, new { htmlAttributes = new { @class = "form-control", @type = "Password" } })
                    @Html.ValidationMessageFor(model => Model.ConfirmarPass, "", new { @class = "text-danger" })
                </div>
            </div>



        </div>
    }
    <div class="card" id="dyn_2">
        <h4 style="padding:1px; background-color:var(--color-primary)" class="card-header mt-0"></h4>
        <div class="card-body fade-in p-2">
            <div class="col-lg-12 pull-left botonera">
                <a class="btn btn-danger removeOnIframe" href="/intranet/Home/Index">Regresar</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}