<div class="card" id="dyn_2">
    <h4 style="padding:1px; background-color:var(--color-primary)" class="card-header mt-0"></h4>
    <div class="card-body fade-in p-2">
        <div class="col-lg-12 pull-left botonera">
            @HtmlHelperExtension.Boton("RelAsig_CuentasDeEnvios_A_Tablas", "Listado", ViewBag.Seccion)

            @HtmlHelperExtension.Boton("RelAsig_CuentasDeEnvios_A_Tablas", "Update", Model.Id, ViewBag.DatosDeUnaPagina.AutorizadoAOperarLaPagina, ViewBag.Seccion)

            @HtmlHelperExtension.Boton("RelAsig_CuentasDeEnvios_A_Tablas", "Delete", Model.Id, ViewBag.DatosDeUnaPagina.AutorizadoAOperarLaPagina, ViewBag.DatosDeUnaPagina.AutorizadoAAccionesEspeciales, pSeccion: ViewBag.Seccion)
        </div>
    </div>
</div>

<div id="accordion">
    <div class="card">
        <div class="card-header p-0" style="background-color: #adadad;border-color:grey;color:white;" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Historia del Registro
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                @Html.Raw(Model.Historia)
            </div>
        </div>
    </div>
</div>

