@model ControladoresCore.ViewModels.RelAsig_CuentasDeEnvios_A_TablasVM
@using ControladoresCore.Extensiones
@{
    ViewBag.Title = "Relacion Cuenta/Tabla - Insertar registro";
}

@using (Html.BeginForm())
{
    using (Html.BeginCard("Nueva relacion cuenta/tabla"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



            <div class="form-group">
                @Html.LabelFor(model => model.TablaId, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.TablaId, new SelectList(Model.Tablas, "Id", "Nombre", Model.TablaId), "Seleccione una opcion...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TablaId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CuentaDeEnvioId, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.CuentaDeEnvioId, new SelectList(Model.Cuentas, "Id", "Nombre", Model.CuentaDeEnvioId), "Seleccione una opcion...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CuentaDeEnvioId, "", new { @class = "text-danger" })
                </div>
            </div>


        </div>
    }
        <div class="card" id="dyn_2">
            <h4 style="padding:1px; background-color:var(--color-primary)" class="card-header mt-0"></h4>
            <div class="card-body fade-in p-2">
                <div class="col-lg-12 pull-left botonera">
                    @HtmlHelperExtension.Boton("RelAsig_CuentasDeEnvios_A_Tablas","Listado",ViewBag.Seccion)
                    @HtmlHelperExtension.Boton("Insert", ViewBag.DatosDeUnaPagina.AutorizadoACargarLaPagina,ViewBag.Seccion)
                </div>
            </div>
        </div>
}
<script>
    function MoverContenido() {
        if (($('.note-editable').html() != "<p><br></p>")) {
            $('.html-text-editor').val($('.note-editable').html());
            return true;
        }
        return false;
    }
</script>
<script src="~/template/plugins/forms/summernote/summernote.js"></script>
<script src="~/template/js/HtmlEditor.js"></script>


