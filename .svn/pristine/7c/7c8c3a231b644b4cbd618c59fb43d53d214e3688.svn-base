IF (OBJECT_ID('usp_LoginDeDispositivos__Campos_by_@Token') IS NOT NULL) DROP PROCEDURE usp_LoginDeDispositivos__Campos_by_@Token
GO
CREATE PROCEDURE usp_LoginDeDispositivos__Campos_by_@Token
		@Token						VARCHAR(50)
		,@sResSQL					VARCHAR(1000)			OUTPUT 
		,@UsuarioQueEjecutaId		INT
	AS
	BEGIN
		SELECT LD.Token
			,LD.UsuarioId
			,LD.DispositivoId
			,LD.InicioValides
			,LD.FinValidez
			,D.MachineName
		FROM LoginDeDispositivos LD
			INNER JOIN Dispositivos D ON D.id = LD.DispositivoId
		WHERE		
			(LD.Token =  @Token )
		SET @sResSQL = ''
	END
GO
