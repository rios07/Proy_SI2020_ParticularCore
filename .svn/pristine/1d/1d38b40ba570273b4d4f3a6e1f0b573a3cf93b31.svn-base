<script>
    $(function() {
        CargarImagenes();

    });

    function CargarImagenes() {
        var datos = {
            pRegistroId: $("#Id").val()
        };
        var incremento = 0;
        var indicators = $("#Indicators");
        var sources = $("#SourceImagen");
        $.ajax({
            url: '@Url.Action("CargarArchivos")', //Usando razor en js, voilá
            type: 'post',
            dataType: 'json',
            contentType: 'application/json',
            success: function(data) {
                data.forEach(function(item) {
                    if (item.Extension.toLowerCase() == "jpg" ||
                        item.Extension.toLowerCase() == "png" ||
                        item.Extension.toLowerCase() == "jpeg") {
                        var indicator = ArmarIndicator(incremento, item.SrcArchivo);
                        var source = ArmarSource(incremento, item.SrcArchivo, item.NombreAMostrar);
                        indicators.append(indicator);
                        sources.append(source);
                        incremento++;
                    }
                });
                if (incremento == 0) {
                    $(".panelCarouselle").remove();
                    $("#TabArchivos").click();
                }
            },
            data: JSON.stringify(datos)
        });
    }


    function ArmarIndicator(numero, ruta) {
        var template = $('#TemplateIndicator')[0];
        var clone = document.importNode(template.content, true);

        var IndicatorLi = clone.querySelector("#DataSlide");
        $(IndicatorLi).attr("data-slide-to", numero);
        if (numero == 0) {
            $(IndicatorLi).attr("class", "active img-thumbnail");
        }

        var Imagen = clone.querySelector("img");
        ruta = AgregarSufijo(ruta);
        $(Imagen).attr("src", "/" + ruta);
        $(Imagen).attr("alt", "image" + numero);


        return clone;
    }

    function ArmarSource(numero, ruta, nombre) {
        var template = $('#TemplateSourceImagen')[0];
        var clone = document.importNode(template.content, true);

        var Imagen = clone.querySelector("img");
        $(Imagen).attr("src", "/" + ruta);
        $(Imagen).attr("alt", "image" + numero);

        var Nombre = clone.querySelector("h4");
        $(Nombre).html(nombre);

        if (numero == 0) {
            var divitem = clone.querySelector("#item");
            $(divitem).attr("class", "carousel-item active");
        }


        return clone;
    }

    function AgregarSufijo(ruta) {
        var splitted = new Array();
        var rutaNueva = "";
        splitted = ruta.split('.');
        var Diviciones = splitted.length;
        for (var i = 0; i < Diviciones - 1; i++) {
            rutaNueva = rutaNueva + splitted[i];
        }
        return (rutaNueva + '_th.' + splitted[i]);
    }
</script>

