@using System.Web.Mvc
@using System.Web.Mvc.Html
@using ControladoresCore.Extensiones
@model ControladoresCore.ViewModels.LogErroresVM

@{
    ViewBag.Title = "LogErrores - Listado";
}

@using (Html.BeginCard("Filtros"))
{
    <div class="form-horizontal group-border">
        <div class="row ">
            <div class="col-lg-1 control-label ">
                Desde
            </div>
            <div class="col-lg-3">
                <div class="input-group" style="max-width: 350px">
                    <span class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </span>
                    <input class="form-control text-box single-line datepicker" filtro="FechaDeEjecucionDesde" id="FechaDeEjecucionDesde" name="FechaDeEjecucionDesde" type="text" value="2017-01-01">
                </div>
            </div>
            <div class="col-lg-1 control-label">
                Hasta
            </div>
            <div class="col-lg-3">
                <div class="input-group" style="max-width: 350px">
                    <span class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </span>
                    <input class="form-control text-box single-line datepicker" filtro="FechaDeEjecucionHasta" id="FechaDeEjecucionHasta" name="FechaDeEjecucionHasta" type="text" value="2022-01-01">
                </div>
            </div>

            <label class="col-lg-1 control-label">
                Tabla
            </label>
            <div class="col-lg-3">
                @Html.DropDownListFor(m => m.TablaId, new SelectList(Model.Tablas, "Id", "Nombre", Model.TablaId
                    ), "- Todas -", new {filtro = "TablaId", @class = "form-control"})
            </div>

        </div>
        <div class="row mt-2">
            <div class="col-lg-8">
                <a class="btn btn-primary" href="javascript:reloadDatatable();">Listar</a>
                <div class="btn-group dropup mo-mb-2">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Acciones Secundarias</button>
                    <div class="dropdown-menu">
                        @Html.ActionLink("Exportar registros", "Exportar", null, new {@class = "dropdown-item"})
                        @*<a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>*@
                        @*<div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginCard("Listado"))
{
    <table id="tableAjax" class="table table-bordered table-striped responsive table-hover per100">
        <thead>
        <tr>
            <th field="Id" style="width: 5%">
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th field="FechaDeEjecucionParaListado" style="width: 10%">
                @Html.DisplayNameFor(model => model.FechaDeEjecucion)
            </th>

            <th field="Pagina">
                @Html.DisplayNameFor(model => model.Pagina)
            </th>

            <th field="Tabla">
                @Html.DisplayNameFor(model => model.Tabla)
            </th>

            <th field="Mensaje" style="width: 50%">
                @Html.DisplayNameFor(model => model.Mensaje)
            </th>

            <th field="Accion">
                @Html.DisplayNameFor(model => model.Accion)
            </th> 

            <th field="NumeroDeError">
                @Html.DisplayNameFor(model => model.NumeroDeError)
            </th>

            @HtmlHelperExtension.Boton("LogErrores", "Listado", 0, ViewBag.DatosDeUnaPagina.AutorizadoAOperarLaPagina, ViewBag.Seccion)
        </tr>
        </thead>
    </table>
}

<style>
    td {
        max-width: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>