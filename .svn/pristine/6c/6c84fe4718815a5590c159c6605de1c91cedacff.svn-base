<script>

    var x = document.getElementById("demo");

    function getLocation() {
        function errorGeoloc() {
            MostrarMensaje('Oops!',
                'No se pudo cargar la geolocacion, compruebe que este habilitada para el sitio',
                true);
        }

        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition, errorGeoloc);
        } else {
            x.innerHTML = "No funca la geoloc.";
        }
        return false;
    }

    function showPosition(position) {
        $("#Latitud").val(position.coords.latitude);
        $("#Longitud").val(position.coords.longitude);
        return false;
    }

