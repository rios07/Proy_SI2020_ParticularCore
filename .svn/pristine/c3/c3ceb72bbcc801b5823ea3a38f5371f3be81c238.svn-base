@using System.Web.Mvc.Html
@using ControladoresCore.Extensiones
@model ControladoresCore.ViewModels.RecursosVM
@{
    ViewBag.Title = "Recursos - Registro";
}
<div class="row">
    <div class="col-md-10">

    </div>
</div>
@using (Html.BeginCard("Recurso seleccionado"))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="row">

        <div class=" col-sm-12">
            <h5 class="pull-right text-muted " style="border-top-width: -20px; margin-top: -10px; padding-top: -20px; padding-top: 0px;">
                Registro Activo:
                @if (Model.Activo)
                {
                    <i class="mdi mdi-check-circle-outline" style="color: darkseagreen"></i>
                }
                else
                {
                    <i class="mdi mdi-close-circle-outline" style="color: indianred"></i>
                }
            </h5>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "col-form-label col-md-3 " })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UsuariosResponsables, htmlAttributes: new { @class = "col-form-label col-md-3 " })
        <div class="col-md-9">
            @Html.EditorFor(model => model.UsuariosResponsables, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.UsuariosResponsables, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "col-form-label col-md-3 " })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
        </div>
    </div>
    @using (Html.BeginCard("Reservas"))
    {
        <div style="height:400px; overflow-y:auto">
            <table id="TablaComponentes" class="table">
                <thead style="background-color: #67a8e496;">
                    <tr>
                        <th scope="col"></th>
                        <th style="width: 25%" scope="col">Id de reserva</th>
                        <th style="width: 25%" scope="col">Fecha inicio</th>
                        <th style="width: 35%" scope="col">Fecha fin</th>
                        <th style="width: 35%" scope="col">Usuario que reserva</th>
                        <th style="width: 20%" scope="col">Abrir</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ReservasDeRecursos.Count; i++)
                    {
                        <tr>
                            <th scope="row"></th>
                            <td>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.HiddenFor(model => model.ReservasDeRecursos[i].Id)
                                        @Html.DisplayFor(model => model.ReservasDeRecursos[i].Id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <div class="row col-md-12">
                                        @Html.DisplayFor(model => model.ReservasDeRecursos[i].FechaDeInicio, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <div class="row col-md-12">

                                        @Html.DisplayFor(model => model.ReservasDeRecursos[i].FechaLimite, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.DisplayFor(model => model.ReservasDeRecursos[i].UsuarioDestinatario, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    </div>
                                </div>
                            </td>
                            
                            <td>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <a href="/@ViewBag.Seccion/ReservasDeRecursos/Registro/@Model.ReservasDeRecursos[i].Id">Abrir</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
    }
}


<div class="card m-b-20" id="dyn_2">
    <div class="card-body fade-in">
        <div class="col-lg-12 m-2 pull-left botonera">
            @HtmlHelperExtension.Boton("Recursos", "Listado", ViewBag.Seccion)
            @HtmlHelperExtension.Boton("Recursos", "Update", Model.Id, ViewBag.DatosDeUnaPagina.AutorizadoAOperarLaPagina, ViewBag.DatosDeUnaPagina.AutorizadoAAccionesEspeciales, Model.Activo, ViewBag.Seccion)
      
            <div class="btn-group dropup mo-mb-2">
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Acciones</button>
                <div class="dropdown-menu">
                    <a class="dropdown-item btn-info" href="javascript:ObtenerUrlTareas(@Model.Id)" role="button">Añadir Tarea</a>
                    @HtmlHelperExtension.BotonDeAcciones("Recursos", "Delete", Model.Id, ViewBag.DatosDeUnaPagina.AutorizadoAOperarLaPagina, ViewBag.DatosDeUnaPagina.AutorizadoAAccionesEspeciales, Model.Activo, ViewBag.Seccion)
                </div>
            </div>
            <a class="btn btn-danger removeOnIframe" href="/administracion/Home/Index">Cancelar</a>
        </div>
    </div>
</div>

<div id="accordion">
    <div class="card">
        <div class="card-header p-0" style="background-color: #adadad; border-color: grey; color: white;" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Historia del Registro
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                @Html.Raw(Model.Historia)
            </div>
        </div>
    </div>
</div>