@using ControladoresCore.Extensiones
@model ControladoresCore.ViewModels.PaginasVM

@{
    ViewBag.Title = "Insert";
}




@using (Html.BeginForm())
{
    using (Html.BeginCard("Nueva Pagina"))
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

            <div class="col-lg-3">

            </div>
            <div class="col-lg-3">

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TablaId, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.TablaId, new SelectList(Model.ListaTablas, "Id", "Nombre", Model.TablaId
                        ), "- Todas -", new {filtro = "TablaId", @class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FuncionDePaginaId, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.FuncionDePaginaId, new SelectList(Model.ListaFuncionesDePaginas, "Id", "Nombre", Model.FuncionDePaginaId
                        ), "- Todas -", new {filtro = "FuncionDePaginaId", @class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RolesStringList, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.RolesStringList, new SelectList(Model.Roles, "Id", "Nombre", ""
                        ), "- Todas -", new {filtro = "FuncionDePaginaId", @class = "form-control select2", multiple = "multiple"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Nombre, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Nombre, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Titulo, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Titulo, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Titulo, "", new {@class = "text-danger"})
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Tips, htmlAttributes: new {@class = "control-label col-md-3 "})
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Tips, new {@class = "form-control", rows = "5", style = "width:280"})
                    @Html.ValidationMessageFor(model => model.Tips, "", new {@class = "text-danger"})
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Observaciones, htmlAttributes: new {@class = "control-label col-md-3 "})
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Observaciones, new {@class = "form-control", rows = "5", style = "width:280"})
                    @Html.ValidationMessageFor(model => model.Observaciones, "", new {@class = "text-danger"})
                </div>
            </div>


        </div>
    }
    <div class="card" id="dyn_2">
        <h4 style="background-color: var(--color-primary); padding: 1px;" class="card-header mt-0"></h4>
        <div class="card-body fade-in p-2">
            <div class="col-lg-12 pull-left botonera">
                @HtmlHelperExtension.Boton("Paginas", "Listado", ViewBag.Seccion)
                @HtmlHelperExtension.Boton("Insert", ViewBag.DatosDeUnaPagina.AutorizadoACargarLaPagina, ViewBag.Seccion)
            </div>
        </div>
    </div>
}